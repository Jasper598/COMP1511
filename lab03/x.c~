#include <stdio.h>
int main(void){

    int i,j,n;  
    
    printf("Please input your number: ");    
    scanf("%d", &n);
    i=0;
     while(i<=n-1){   
       j=0;
            while (j<=n-1)  
            { if (j==i|| j==n-i-1){
             printf("*");}
             else{
             printf("-");
             }             
               j=j+1 ;
              }  
       printf("\n");
       i=i+1;         
           
            
        }


    return 0;
}
